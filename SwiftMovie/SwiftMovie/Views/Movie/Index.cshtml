@{
    ViewBag.Title = "热播电影";
    List<Model.Movie> ms = (List<Model.Movie>)ViewData["PlayMovies"];
    List<Model.Movie> sms = (List<Model.Movie>)ViewData["SoonMovies"];
    List<Model.Cinecism> ccs = (List<Model.Cinecism>)ViewData["Cinecisms"];
}

    <link href="@Url.Content("~/Content/movie.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/film1.js")" type="text/javascript"></script>


	<div class="con">
	
		<!--左侧评论栏-->
		<div class="com"> 
		<p style="font-size:36px;color:#311111">电影の评论</p>
		<marquee direction="up" behavor="scroll" scrollamount="3" scrolldelay="0" onmouseover="this.stop()" onmouseout="this.start()" style="height:500px;">
		@{
            foreach (Model.Cinecism cc in ccs)
            {
                <h3>@cc.UserName 说：</h3>
                <p> @cc.Comment </p>
                <hr/>
            }
         }
		</marquee>     
		</div>
		<!--左侧评论栏 end-->

        <!--右侧影片介绍栏-->
		<div class="right">           
			<!--正在热映-->
			<div class="hot">
			<p style="font-size:18px; color:#FF9999;">正在热映</p>
			<div id="wrap">
				<ul>
                @{
                    foreach (Model.Movie m in ms)
                    {
					<li><a href="/Movie/Detail?id=@m.MovieID"><img src="@m.CoverURL" alt="@m.MovieName" /></a></li>
                    }
                    }
				</ul>
			</div>
			</div>
			
			
			<!--即将上映-->
			<div class="coming"> 
			
								<!--滚动图片 start-->
					
					
					<!--标题栏 start-->
					<div class=FixTitle>
					<p style="font-size:18px; color:#FF9999;">即将上映</p>
					</div>
					<!--标题栏 end-->
					
					<div class="blk_29">
					
						<div class="LeftBotton" id="LeftArr"><img src="/Content/Image/turnleft.jpg"></div>
						<div class="Cont" id="ISL_Cont_1">
						<!-- 图片列表 begin -->

								
                                @{
                                    foreach (Model.Movie sm in sms)
                                    {<div class=box>
								<a class="imgBorder" href="/Movie/Detail?id=@sm.MovieID" target=_blank><img src="@sm.CoverURL" /></a> 
								<p><a href="/Movie/Soon?id=@sm.MovieID" target=_blank>@sm.MovieName</a></p>
                                     </div>
                                    }
                                 }

								<!-- 图片列表 end -->
					  </div>
					<div class=RightBotton id=RightArr><img src="/Content/Image/turnright.jpg"></div>
                    </div>				
                    <script src="@Url.Content("~/Scripts/film2.js")" type="text/javascript"></script>
					<!--滚动图片 end-->
			</div>
	  </div>

	      
	</div>
	<!--评论栏 end-->
