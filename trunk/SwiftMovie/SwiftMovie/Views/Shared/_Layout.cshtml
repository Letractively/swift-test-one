<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
</head>

<body>
    <div id="header">
        <img src="/content/Image/logo.png" alt="看什么看，我就是沙猫" height="80" width="120"/>
        <h1><a href="/">沙猫电影网</a></h1>
        <ul id="top-right">
            <li class="first"><a href="@Url.Action("Login", "Account")">登录</a></li>
            <li><a href="@Url.Action("Reg",  "Account")">注册</a></li>
        </ul>
        <div class="search">
            <input name="search" type="text" placeholder="请在此输入搜索关键字"/>
            <select name="select" style="width:150px;">
                <option>按片名搜索</option>
                <option>按演员搜索</option>
                <option>按导演搜索</option>
            </select>
            <input type="submit" name="search" value="搜索" />
        </div> 

        <nav>
          <menu class="menu">
              <ul>
                <li><a href="/" title="首页">首页</a></li>
                <li><a href="/Movie/" title="电影">电影</a></li>
                <li><a href="/Cinema/" title="影院">影院</a></li>
              </ul>
          </menu>
        </nav>


    </div>

    @RenderBody()
    <div id="footer">
        <p>&copy;Swift 小组 | <a href="@Url.Action("About", "Home")">关于我们</a> | <a href="mailto:swift@hust.edu.cn">联系我们</a></p>
    </div> 
</body>
</html>
